{
  "name": "@vanilla-primitives/core",
  "version": "0.1.8",
  "description": "Core primitives for vanilla web components",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "unpkg": "dist/umd/index.min.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./alert-dialog": {
      "import": "./dist/esm/alert-dialog.js",
      "require": "./dist/cjs/alert-dialog.js"
    },
    "./dialog": {
      "import": "./dist/esm/dialog.js",
      "require": "./dist/cjs/dialog.js"
    },
    "./tabs": {
      "import": "./dist/esm/tabs.js",
      "require": "./dist/cjs/tabs.js"
    },
    "./calendar": {
      "import": "./dist/esm/calendar.js",
      "require": "./dist/cjs/calendar.js"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-commonjs": "^21.0.1",
    "rollup": "^2.60.0",
    "rollup-plugin-terser": "^7.0.2",
    "rimraf": "^3.0.2"
  },
  "publishConfig": {
    "access": "public"
  }
}