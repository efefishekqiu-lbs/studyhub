{
    "name": "@vanilla-primitives/styled",
    "version": "0.4.3",
    "description": "Styled primitives for vanilla web components",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "unpkg": "dist/index.umd.min.js",
    "browser": "dist/index.umd.min.js",
    "exports": {
        ".": {
            "import": "./dist/index.esm.js",
            "require": "./dist/index.js",
            "default": "./dist/index.umd.js"
        },
        "./shadcn-default-css": "./dist/shadcn-default-css/index.js",
        "./shadcn-default-css/*": "./dist/shadcn-default-css/*",
        "./shadcn-default": "./dist/shadcn-default/index.js",
        "./shadcn-default/*": "./dist/shadcn-default/*",
        "./unstyled": "./dist/unstyled/index.js",
        "./unstyled/*": "./dist/unstyled/*",
        "./themes/*": "./dist/themes/*"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "clsx": "^2.1.1",
        "rollup-plugin-copy": "^3.5.0",
        "tailwind-merge": "^2.5.2"
    },
    "peerDependencies": {
        "@vanilla-primitives/core": "^0.1.2"
    },
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@babel/preset-env": "^7.25.4",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-node-resolve": "^13.0.6",
        "@vanilla-primitives/core": "^0.1.2",
        "cssnano": "^7.0.5",
        "rimraf": "^3.0.2",
        "rollup": "^2.60.0",
        "rollup-plugin-postcss": "^4.0.2",
        "rollup-plugin-terser": "^7.0.2"
    },
    "publishConfig": {
        "access": "public"
    }
}